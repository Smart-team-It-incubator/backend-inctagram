{
  "name": "core_app",
  "version": "0.0.1",
  "description": "",
  "author": "Smart-team",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/apps/core_app/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=TEST jest --runInBand --passWithNoTests",
    "build:files": "nest build files",
    "start:files": "cross-env ENV_FILE=./apps/files/.production.env node dist/apps/files/main",
    "start:dev:files": "cross-env ENV_FILE=./apps/files/.development.env nest start files --watch",
    "build:core_app": "nest build core_app",
    "start:core_app": "cross-env ENV_FILE=./apps/core_app/.production.env node dist/apps/core_app/main",
    "start:dev:core_app": "cross-env ENV_FILE=./apps/core_app/.development.env nest start core_app --watch",
    "build:auth": "nest build auth",
    "start:auth": "cross-env ENV_FILE=./apps/auth/.production.env node dist/apps/auth/main",
    "start:dev:auth": "cross-env ENV_FILE=./apps/auth/.development.env nest start auth --watch",
    "migrate:core-app:dev": "dotenv -e ./apps/core_app/.development.env -- npx prisma migrate dev --schema=./apps/core_app/prisma/schema.prisma",
    "migrate:core-app:prod": "dotenv -e ./apps/core_app/.production.env -- npx prisma migrate deploy --schema=./apps/core_app/prisma/schema.prisma",
    "migrate:statusdev": "cross-env ENV_FILE=.development.env npx prisma migrate status",
    "migrate:statusprod": "cross-env ENV_FILE=.production.env npx prisma migrate status",
    "migrate:hotfix": "cross-env ENV_FILE=.production.env npx prisma migrate resolve --applied",
    "migrate:auth:dev": "dotenv -e ./apps/auth/.development.env -- npx prisma migrate dev --schema=./apps/auth/prisma/schema.prisma",
    "migrate:auth:prod": "dotenv -e ./apps/auth/.production.env -- npx prisma migrate deploy --schema=./apps/auth/prisma/schema.prisma",
    "generate:auth": "dotenv -e ./apps/core_app/.development.env -- npx prisma generate --schema=./apps/auth/prisma/schema.prisma",
    "generate:core_app": "dotenv -e ./apps/core_app/.development.env -- npx prisma generate --schema=./apps/core_app/prisma/schema.prisma",
    "libs:builds": "nest build shared-dto && nest build auth-api && nest build core-app-api"
  },
  "dependencies": {
    "@libs/shared-dto": "file:./libs/shared-dto",
    "@nestjs/axios": "^3.1.3",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/cqrs": "^10.2.8",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.4.15",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^8.1.0",
    "@prisma/client": "^6.0.1",
    "@types/cookie-parser": "^1.4.8",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "dotenv-cli": "^7.4.4",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/shared-dto(|/.*)$": "<rootDir>/libs/shared-dto/src/$1",
      "^@core-app-api/core-app-api(|/.*)$": "<rootDir>/libs/core-app-api/src/$1",
      "^auth-api/auth-api(|/.*)$": "<rootDir>/libs/auth-api/src/$1"
    }
  },
  "main": "index.js",
  "repository": "https://github.com/Smart-team-It-incubator/backend-inctagram"
}
